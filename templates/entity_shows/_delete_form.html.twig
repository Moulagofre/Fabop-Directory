<form method="post" action="{{ path('entity_shows_delete', {'id': entity_show.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity_show.id) }}">
    <button class="btn">Delete</button>
</form>
