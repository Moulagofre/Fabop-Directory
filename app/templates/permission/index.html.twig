{% extends 'baselayout.html.twig' %}

{% block title %}Permissions{% endblock %}

{% block content %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success flash-message">
            {{ message }}
        </div>
    {% endfor %}
    <h2><i class="fas fa-balance-scale-right"></i> Gestion des permissions</h2>
    <a class="btn btn-primary mr-2 mb-4" href="{{ path('permission_new') }}"><i class="fas fa-plus"></i> Créer une permission</a>
    <table class="table table-striped">
        <thead class="bg-secondary text-white">
        <tr>
            <th>Libellé de la permission</th>
            <th><i class="fas fa-cog"></i></th>
        </tr>
        </thead>
        <tbody>
        {% for all_perm in all_perms | sort %}
            {% if all_perm.role is not defined  %}
            <tr>
                <td>{{ all_perm.label }}</td>
                <td>
                    <a href="{{ path('admin_permission_edit', {'id': all_perm._id}) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="5">Aucune entrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}