{% extends 'baselayout.html.twig' %}

{% block title %}Role : {{ entity_roles.nom }}{% endblock %}

{% block content %}
    <h1>Role : {{ entity_roles.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity_roles.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity_roles.nom }}</td>
            </tr>
            <tr>
                <th>Utilisateurs</th>
                {% for user in entity_roles.users %}
                <td>{{ user}}</td>
                {% endfor %}
            </tr>
                {% set JustFirst = true %}
                {% for key,value in permissions %}
                <tr>
                <th>{{ key }}</th>
                {% if JustFirst  == true %}
                {% for val in value %}
                <td>{{ val }}</td>
                {% set JustFirst = false %}
                </tr>
                {% endfor %}
                {% else %}
                    {% if value == 1 %}
                        <td>Vrai</td>
                    {% elseif value == ' ' %}
                        <td>Aucun droit<td>
                    {% elseif value == 0 %}
                        <td>Faux<td>
                    {% else %}
                        <td>{{value}}</td>
                    {% endif %} 
                {% endif %}
                {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_roles_index') }}">Retour Ã  la liste</a>

    <a href="{{ path('admin_roles_edit', {'id': entity_roles.id}) }}">Modifier</a>

    {{ include('entity_roles/_delete_form.html.twig') }}
{% endblock %}
