{% extends 'baselayout.html.twig' %}

{% block title %}Roles{% endblock %}

{% block content %}
    <h2><i class="fas fa-roless"></i> Liste des roles</h2>
    <div class="row m-3">
        <a class="btn btn-primary mr-2" href="{{ path('admin_roles_new') }}"><i class="fas fa-plus"></i> Ajouter</a>
    </div>
    <div class="container">
    <div class="row justify-content-center">
        <a class="col-4 btn btn-primary mr-2" href="{{path('admin_user_index')}}">liste utilisateur</a>
        <a class="col-4 btn btn-primary mr-2" href="{{path('admin_roles_index')}}">liste role</a>
    </div>
    </div>
       <table class="table table-striped">
        <thead class="bg-secondary text-white">
            <tr>
                <th><input type="checkbox" id="select-all"></th>
                <th>Nom</th>         
                <th><i class="fas fa-cog"></i></th>
            </tr>
        </thead>
        <tbody>
        {% for entity_role in entity_roles | sort %}
        
            <tr>
                <td id="{{ entity_role.id }}"><input type="checkbox" name="selected[{{ entity_role.id }}]"></td> <!--VALUE !-->
                <td>{{ entity_role.nom }}</td>
 
                <td>
                    <a href="{{ path('admin_roles_edit', {'id': entity_role.id}) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune entr√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
