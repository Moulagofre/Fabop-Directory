{% extends 'baselayout.html.twig' %}

{% block title %}Import-export de données{% endblock %}

{% block content %}
    <h2>Import-export de données</h2>

    <section class="row">
        <section class="col-6">
            <h3><i class="fa fa-file-import"></i> Importer des données</h3>
            <form action="">
                <div class="custom-file mb-1">
                    <label class="custom-file-label" for="import-file">Choose file</label>
                    <input type="file" class="custom-file-input" id="import-file">
                </div>
                <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Importer</button>
            </form>
        </section>

        <section class="col-6">
            <h3><i class="fa fa-upload"></i> Exporter des données</h3>
            <form action="">
                <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Exporter</button>
            </form>
        </section>
    </section>
{% endblock %}