{% extends 'baselayout.html.twig' %}

{% block title %}Import-export de données{% endblock %}

{% block content %}

    <div class="row">

        <div class="col">
            <h2><i class="fa fa-file-import"></i> Télécharger un modèle de base</h2>
            <section class="dropdown">
                <button class="btn btn-success dropdown-toggle" type="button" id="selectionMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Selectionner un modèle de base
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <form action="" enctype="multipart/form-data" method="POST">
                        <div class="custom-file mb-1">
                            <button type="submit" class="dropdown-item" href="{{ path('modele_personne') }}">Personne</button>
                            <a type="submit" class="dropdown-item" href="{{ path('modele_institution') }}">Institution</a>
                            <a type="submit" class="dropdown-item" href="{{ path('modele_spectacle') }}">Spectacle</a>
                        </div>
                    </form>
                </div>
            </section>
            <br>
            <br>
        </div>

        <div class="col">
            <h2><i class="fa fa-file-import"></i> Vos modèles customisés</h2>
            <section class="dropdown">
                <button class="btn btn-success dropdown-toggle" type="button" id="selectionMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Télécharger un modele
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <form action="" enctype="multipart/form-data" method="POST">
                        <div class="custom-file mb-1">
                            {% for modele in modeles %}
{#                                {{ dump(modele.getNameXlsx()) }}#}
                                <a class="dropdown-item" download href="{{ asset(modele.filename) }}">{{ modele.name }}</a>
{#                               <a class="dropdown-item" download href="{{ asset (vich_uploader_asset(modele, 'name')) }}" target="_blank" >{{ modele.getNameXlsx() }}</a>#}
{#                               <a class="dropdown-item" download href="{{asset (vich_uploader_asset (modele, 'modeleFile'))}}" target="_blank" >{{ modele.name }}</a>#}
                            {% endfor %}
                        </div>
                    </form>
                </div>
            </section>
            <br>
            <br>
        </div>

    </div>

    <div class="col">
        <section class="row">
            <section class="col-6">
                <h2><i class="fa fa-file-import mt-3"></i> Importer des données</h2>
                <form action="{{ path('import') }}" enctype="multipart/form-data" method="POST">
                    <div class="custom-file mb-1">
                        <label class="custom-file-label" id="labelChoose" for="import-file">Choose file</label>
                        <input type="file" class="custom-file-input" id="import-file" name="import">
                    </div>
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Importer</button>
                </form>
        </section>
    </div>

{% endblock %}