{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form) }}
<div class="container">
    {{ form_widget(form, { 'attr': {'class': 'input'} }) }}
    <div id="person_data">
         {%  if entity_person_data is defined %}
             {% for key,value in entity_person_data  %}
                 {% if key != '_id' %}
                 <label>{{ key }}</label><input name="person_data[{{ key }}]" class="form-control" value="{{ value }}">
                 {% endif %}
             {% endfor %}
         {% else %}
             <button class="btn btn-primary m-1" id="add_person_data" type="button">+</button>
         {%  endif %}
    </div>
    <button id='validForm' class="btn btn-primary m-1"><i class="fas fa-check"></i> {{ button_label|default('Valider') }}</button>
    <a class="btn btn-light m-1" href="{{ path('entity_people_index') }}"><i class="fas fa-undo"></i> Annuler</a>
</div>
{{ form_end(form) }}
