{% extends 'baselayout.html.twig' %}

{% block title %} Ã‰dition du fichier :  {{ entity_modeles.name }} {% endblock %}

{% block content %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}

    {{ form_start(form) }}
    <div class="container">
        {{ form_widget(form, { 'attr': {'class': 'input'} }) }}
        <div id="modele_data">
            {%  if entity_Custom_data is defined %}
                {% for key,value in entity_Custom_data  %}
                    {% if key != '_id' %}
                        <label>{{ key }}</label><input name="modele_data[{{ key }}]" class="form-control" value="{{ value }}">
                    {% endif %}
                {% endfor %}
            {%  endif %}
        </div>
        <button id='validForm' class="btn btn-primary m-1"><i class="fas fa-check"></i> {{ button_label|default('Valider') }}</button>
        <a class="btn btn-light m-1" href="{{ path('entity_modeles_index') }}"><i class="fas fa-undo"></i> Annuler</a>
    </div>
    {{ form_end(form) }}
{% endblock %}
