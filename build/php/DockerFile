# ./docker/php/Dockerfile
FROM php:7.2-fpm

RUN docker-php-ext-install pdo_mysql

RUN pecl install apcu

RUN apt-get update && \
apt-get install -y \
zlib1g-dev
RUN apt-get install -y libicu-dev g++
RUN docker-php-ext-configure intl
RUN docker-php-ext-install intl

RUN apt-get install -y autoconf build-essential

RUN docker-php-ext-install zip
RUN docker-php-ext-enable apcu
RUN pecl install mongodb

RUN curl --silent --show-error https://getcomposer.org/installer | php
RUN ln -snf /usr/share/zoneinfo/Europe/Lisbon /etc/localtime
RUN docker-php-ext-enable /usr/local/lib/php/extensions/no-debug-non-zts-20170718/mongodb.so
RUN apt-get install -y libmongoc-1.0-0
RUN apt-get install -y libcurl4-openssl-dev pkg-config libssl-dev
RUN pecl uninstall mongodb
RUN pecl install mongodb

WORKDIR /var/www/html/symfony

RUN chown -R :www-data /var/www

RUN php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');"
RUN php -r "if (hash_file('sha384', 'composer-setup.php') === 'e0012edf3e80b6978849f5eff0d4b4e4c79ff1609dd1e613307e16318854d24ae64f26d17af3ef0bf7cfb710ca74755a') { echo 'Installer verified'; } else { echo 'Installer corrupt'; unlink('composer-setup.php'); } echo PHP_EOL;"
RUN php composer-setup.php
RUN php -r "unlink('composer-setup.php');"

RUN php composer.phar install


EXPOSE 9000

CMD ["php-fpm"]
